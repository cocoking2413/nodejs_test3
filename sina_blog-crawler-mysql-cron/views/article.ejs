<!doctype>
<html>
<head>
    <title>test cat news</title>
    <link href="/css/zui.css" rel="stylesheet">
    <script src="/js/jquery.js" type="text/javascript"></script>
    <script src="/lib/layer/layer.js" type="text/javascript"></script>
    <script src="/js/zui.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/lib/photoswipe/photoswipe.css">
    <script src="/lib/photoswipe/lib/klass.min.js" type="text/javascript"></script>
    <script src="/lib/photoswipe/code.photoswipe-3.0.5.min.js" type="text/javascript"></script>
</head>
<body>
<div id="body" class="container-fluid">
    <div class="row-fluid">
        <div id="title" class="col-md-offset-1 col-md-10"><h1><%= article.title %></h1></div>
    </div>
    <div class="row-fluid">
        <div class="col-md-offset-1 col-md-2" style="border: solid 1px #c2b1e6">
            <ul class="ul nav" style="list-style: none">
                <li><a href="/">返回主页</a></li>
                <li><a id="viewPhoto">图片浏览</a></li>
            </ul>
        </div>
        <div class="col-md-7" style="border: solid 1px #5c99fa" id="Gallery">
            <%- article.content %>
        </div>
    </div>
</div>
</body>
<script>
    $(function () {
        $("img").each(function (i) {
            var srcstr = "/img?url=" + $(this).attr("real_src");
            $(this).attr("src", srcstr);
            $(this).parent("a").attr("href", srcstr);
            $(this).parent().parent("a").attr("href", srcstr);
        });
        var myPhotos = {
            _initialize: {},
            init: function () {
                this._initialize = $("#Gallery a").photoSwipe();
            },
            showIndex: function (index) {
                if (this._initialize) {
                    this._initialize.show(index);
                }
            }
        }
        myPhotos.init();

        $("#viewPhoto").on('click', function () {
            myPhotos.showIndex(0);
        });
    });

</script>
</html>